	<env-entry>
		<env-entry-name>applicationVersionNumber</env-entry-name>
		<env-entry-value>1.5</env-entry-value>
		<env-entry-type>java.lang.String</env-entry-type>
	</env-entry>
	<env-entry>
		<env-entry-name>acctOracleSchema</env-entry-name>
		<env-entry-value>ACCTDEV</env-entry-value>
		<env-entry-type>java.lang.String</env-entry-type>
	</env-entry>
	<env-entry>
		<env-entry-name>mdLDAPUserDN</env-entry-name>
		<env-entry-value>cn=admin,dc=ubsw,dc=com</env-entry-value>
		<env-entry-type>java.lang.String</env-entry-type>
	</env-entry>
	<env-entry>
		<env-entry-name>mdLDAPPassword</env-entry-name>
		<env-entry-value>dirx</env-entry-value>
		<env-entry-type>java.lang.String</env-entry-type>
	</env-entry>
	<env-entry>
		<env-entry-name>mdLDAPProviderURL</env-entry-name>
		<env-entry-value>ldap://ln4d397cmp:389</env-entry-value>
		<env-entry-type>java.lang.String</env-entry-type>
	</env-entry>
	<env-entry>
		<env-entry-name>oidLDAPUserDN</env-entry-name>
		<env-entry-value>dc=ubsw,dc=com</env-entry-value>
		<env-entry-type>java.lang.String</env-entry-type>
	</env-entry>
	<env-entry>
		<env-entry-name>oidLDAPPassword</env-entry-name>
		<env-entry-value> </env-entry-value>
		<env-entry-type>java.lang.String</env-entry-type>
	</env-entry>
	<env-entry>
		<env-entry-name>oidLDAPProviderURL</env-entry-name>
		<env-entry-value>ldap://ln4d125ora:389</env-entry-value>
		<env-entry-type>java.lang.String</env-entry-type>
	</env-entry>
	<env-entry>
		<env-entry-name>mustAuthenticate</env-entry-name>
		<env-entry-value>false</env-entry-value>
		<env-entry-type>java.lang.Boolean</env-entry-type>
	</env-entry>
</web-app>
