<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app id="WebApp">
	<display-name>accountrequestWeb</display-name>
	<description>Application to allow the manual request of generic accounts.</description>
	<servlet>
		<servlet-name>AccountRequestor</servlet-name>
		<display-name>AccountRequestor</display-name>
		<servlet-class>com.ubs.directory.accountrequest.servlet.AccountRequestor</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>HouseKeeper</servlet-name>
		<display-name>HouseKeeper</display-name>
		<servlet-class>com.ubs.directory.accountrequest.servlet.HouseKeeper</servlet-class>
    <load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>OverrideRequestor</servlet-name>
		<display-name>OverrideRequestor</display-name>
		<servlet-class>com.ubs.directory.accountrequest.servlet.OverrideServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ResourceServlet</servlet-name>
		<display-name>ResourceServlet</display-name>
		<servlet-class>com.ubs.directory.accountrequest.groups.servlet.ResourceServlet</servlet-class>
  </servlet>
	<servlet>
		<servlet-name>GroupServlet</servlet-name>
		<display-name>GroupServlet</display-name>
		<servlet-class>com.ubs.directory.accountrequest.groups.servlet.GroupServlet</servlet-class>
  </servlet>
	<servlet>
		<servlet-name>EntryServlet</servlet-name>
		<display-name>EntryServlet</display-name>
		<servlet-class>com.ubs.directory.accountrequest.servlet.EntryServlet</servlet-class>
  </servlet>

	<servlet-mapping>
		<servlet-name>AccountRequestor</servlet-name>
		<url-pattern>/AccountRequestor</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HouseKeeper</servlet-name>
		<url-pattern>/HouseKeeper</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OverrideRequestor</servlet-name>
		<url-pattern>/OverrideRequestor</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ResourceServlet</servlet-name>
		<url-pattern>/ResourceServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GroupServlet</servlet-name>
		<url-pattern>/GroupServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EntryServlet</servlet-name>
		<url-pattern>/EntryServlet</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>/index.jsp</welcome-file>
	</welcome-file-list>
  
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error.jsp</location>
  </error-page>

  <taglib>
    <taglib-uri>/tlt</taglib-uri>
    <taglib-location>/taglibrary.tld</taglib-location>
  </taglib>

  <resource-ref id="ResourceRef_1">
  	<description/>
  	<res-ref-name>jdbc/GRS</res-ref-name>
  	<res-type>javax.sql.DataSource</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref id="ResourceRef_2">
  	<description/>
  	<res-ref-name>jdbc/Accounts</res-ref-name>
  	<res-type>javax.sql.DataSource</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>

